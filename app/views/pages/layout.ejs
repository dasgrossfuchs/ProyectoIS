                <script>
                    if (document.getElementById('TipoClase').value == 'actividad') {
                        document.getElementById('btnfin-cont').innerHTML = `<button type="submit" 
                        class="btn btn-secondary border-1 border-dark" id="boton-fin" disabled><i class="far 
                        fa-times-circle"></i> ¡Ya casi!</button>`;
