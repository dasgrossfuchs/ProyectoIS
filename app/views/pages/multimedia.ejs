<script type='text/javascript'>
    function imgLoad() {
        document.getElementById('imy').src = '<%-clase.matbck%>';
    }
</script>
<style>
    body {
        background-color: #061981;
    }

    .contenido-gral {
        align-self: center;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
    }

    .texto-mmedia {
        width: 25rem;
        text-align: justify;
        font-weight: bold;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .texto-mmedia .titulo-contenido {
        font-size: 1.3rem;
        color: #24277F;
    }

    .contenedor-mmedia {
        background-color: #A9D8DAe3;
        border: 5px solid #C2F9BB;
        border-radius: 15px;
        margin-inline: 10%;
        margin-top: 50px;
        width: 80%;
        padding-top: 10px;
        padding-bottom: 10px;
    }

    .contenido-video {
        max-width: 30rem;
        max-height: 20rem;
    }

    .inst {
        font-size: 1.1rem;
    }

    .inst-lista {
        color: #2b2b2b;
        font-size: 0.95rem;
    }

    #imy {
        width: 600px;
        max-height: 15rem;
        max-width: 30rem;

    }
</style>
<div class="contenido-gral  d-flex flex-wrap">
    <div class="d-flex texto-mmedia contenido-mmedia flex-wrap">
        <div class="inst"><span>Instrucciones:</span>
            <ul class="inst-lista">
                <li>Lee el texto y ve el video!</li>
            </ul>
        </div>
        <span class="titulo-contenido">
            <%- clase.texttitulo %>
        </span>
        <%-clase.textcont%>
    </div>
    <div class="d-flex flex-column justify-content-center contenido-video contenido-mmedia">
        <legend class="d-flex flex-wrap">
            <%- clase.mattitulo%>
        </legend>
        <video controls onended="vidEnd(false)" onloadstart="vidStart()" autoplay disablepictureinpicture
            controlslist="nodownload" id="vid">
            <source src="/video/<%-clase.matname%>" type="video/mp4" onerror="vidEnd(true)" onloadstart="" />
        </video>
        <img id="imy" src="/img/<%-clase.matname%>" onerror="imgLoad()" hidden>
    </div>
</div>