<script>
    function carga() {
        var error = document.getElementById('error').value;
        if (error == 'uspwd') {
            document.getElementById('msg').innerHTML = 'Contraseña o nombre de usuario incorrecto';
            document.getElementById('msg').hidden = false;
        }
        if (error == 'registrado') {
            document.getElementById('msg').innerHTML = 'Registro completo, inicia sesión para continuar';
            document.getElementById('msg').hidden = false;
        }
    }
</script>

<body onload="carga()">
    <div class="d-inline-flex flex-column justify-content-center">
        <div class="d-inline-flex flex-row mb-3 headlog justify-content-center align-content-center">
            <img src="/img/icon.png">
            <p>
                <span id="titlelog">Fury Knowledge</span><br>
                <span id="subtlog">Donde comienza el aprendizaje</span>
            </p>
        </div>
        <div class="d-flex flex-column justify-content-center flex-wrap align-content-center">
            <form action="/bandeja" method="POST" class="login-form mb-3">
                <p id="msg" hidden>Contraseña o nombre de usuario incorrecto</p>
                <div class="input-group mb-1 mt-2">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input name='usr' type="text" class="form-control" placeholder="Nombre de usuario" required>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                    <input name='pwd' type="password" class="form-control" placeholder="Contraseña" required>
                </div>
                <input type="submit" class="btn btn-primary btn border-1 border-dark" value="Iniciar sesión">
            </form>
            <form action="/registrar" method="GET" class="d-flex flex-row justify-content-evenly">
                <input type="submit" class="btn btn-success border-1 border-dark" value="Crea una cuenta nueva">
            </form>
            <input type="hidden" id='error' value="<%=error%>">
        </div>
    </div>
</body>