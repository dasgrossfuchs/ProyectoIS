<style>
    .titulo-contenido,
    .titulo-material {
        font-size: 1.5rem;
        color: #24277F;
        font-weight: 600;
    }

    .inst {
        font-size: 1.3rem;
        font-weight: 600;
    }

    .inst-lista {
        color: transparent;
        max-width: 15rem;
    }

    .inst-contenido {
        font-family: Arial, Helvetica, sans-serif;
        color: black;
        margin-left: -1.1rem;
        text-align: justify;
    }

    .text-contenido {
        color: black;
        font-size: 1.1rem;
        max-width: 25rem;
        text-align: justify;
    }

    .material {
        max-width: 100%;
        height: auto;
    }

    .material-imagen img {
        display: cover;
        background-color: black;
        max-width: 30rem;
        height: auto;
        max-height: 13rem;
        border-radius: 15px;
        box-shadow: 5px 5px 20px -5px #000000;
    }

    .contenedor-actividad {
        margin: 1rem 2rem 0.2rem 2rem;
        padding: 2rem 2rem;
        background-color: #7fd1e0;
        /* background-color: #A9E9EF; */
        /* border: 5px solid #474e45b4; */
        border-radius: .5rem 5rem;
        box-shadow: 5px 5px 20px -5px #000000;
        width: 50rem;
    }

    .contenedor-actividad .input-group {
        background-color: white;
        max-width: 4rem;
    }

    .act-contenido {
        background-color: white;
        max-width: 12rem;
        padding: .5rem 1rem .5rem 1rem;
        box-shadow: 5px 5px 20px -5px #000000;
        border-radius: .5rem .5rem;
        margin: 1.5rem;
    }

    .act-contenido input {
        background-color: white;
        border-radius: .5rem .5rem;
        margin: 0rem 0rem 0rem -0.5rem;
    }

    .act-contenido img {
        background-color: white;
        border-radius: .5rem .5rem;
        max-width: 10rem;
        max-height: 10rem;
    }

    .input-group-text {
        max-width: 1rem;
        text-align: center;
    }
</style>
<div class="w-100 h-100 d-inline-flex flex-row flex-wrap justify-content-evenly">
    <div class=" h-100 d-inline-flex flex-column flex-wrap justify-content-evenly">
        <span class="titulo-contenido d-flex flex-wrap">
            <%- clase.titulo %>
        </span>
        <div><span class="inst">Instrucciones:</span>
            <ul class="inst-lista">
                <% for(var i=0; i< clase.inst.length; i++) {%>
                    <li class="w-100 text-wrap">
                        <div class=" inst-contenido">
                            <i class="far fa-hand-point-right"></i>
                            <%=clase.inst[i]%>
                        </div>
                    </li>
                    <%}%>
            </ul>
        </div>
        <div class=" d-inline-flex flex-column flex-wrap justify-content-start contenedor-actividad">
            <div class=" d-inline-flex flex-row flex-wrap justify-content-center">
