                            <span><input type="text" id="resul00" style="text-align: center !important;"></span>
                            <input type="hidden" id="val00" value="perro">
                            <input type="hidden" id="val01" value="gato">
                            <input type="hidden" id="val02" value="ardilla">
                            <input type="hidden" id="val03" value="mariposa">
                        </div>
                        <div class="act-contenido" id="ac01">
                            <img src="https://png.pngtree.com/png-clipart/20201208/original/pngtree-hand-drawn-cartoon-gray-cat-clipart-png-image_5529526.jpg"
                                text-align="center" width="175" height="175">
                            <span><input type="text" id="resul01" style="text-align: center !important;"></span>
                        </div>
                    </div>
                    <div id="ag" class="d-inline-flex flex-row justify-content-evenly flex-wrap">
                        <div class="act-contenido" id="ac02">
                            <img src="https://i.pinimg.com/originals/84/5f/49/845f495700a1586900fecec229a0f707.jpg"
